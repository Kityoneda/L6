<h1>Carts#show</h1>
<ul>
  <% @cartitems.each do |cart_item| %>
    <li>
      <%= Product.find(cart_item.product_id).name %>
      <%= Product.find(cart_item.product_id).price %>
      <%= cart_item.qty %>

      <%= button_to '削除', cart_item_path(cart_item), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </li>
  <% end %>
</ul>

<%= link_to '商品一覧', root_path %>
